<?xml version="1.0"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

<xs:element name="socialnetwork">
  <xs:complexType>
    <xs:sequence>
      <xs:element name="person" maxOccurs="unbounded" minOccurs="0">
        <xs:complexType>

          <xs:sequence>
            <xs:element name="name" type="xs:string" />
            <xs:element name="age" type="xs:positiveInteger" />
            <xs:element name="email" type="xs:string" />
            <xs:element name="gender">
              <xs:simpleType>
                <xs:restriction base="xs:string">
                  <xs:pattern value="male|female"/>
                </xs:restriction>
              </xs:simpleType>
            </xs:element>
            <xs:element name="friends" minOccurs="0">
              <xs:complexType>
                <xs:sequence>
                  <xs:element name="person" maxOccurs="unbounded" minOccurs="0">
                    <xs:complexType>
                      <xs:attribute name="screenname" type="xs:string"/>
                    </xs:complexType>
                  </xs:element>
                </xs:sequence>
              </xs:complexType>
            </xs:element>
            <xs:element name="statuses">
              <xs:complexType>
                <xs:sequence>
                  <xs:element name="status" type="xs:string" maxOccurs="unbounded" minOccurs="0"/>
                </xs:sequence>
              </xs:complexType>
            </xs:element>
          </xs:sequence>
          <xs:attribute name="screenname" type="xs:string"/>
          <xs:attribute name="profilepic" type="xs:string"/>
        </xs:complexType>
      </xs:element>
    </xs:sequence>
  </xs:complexType>
</xs:element>

</xs:schema>
